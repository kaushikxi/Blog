<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Document</title>
</head>
<body>
    <div class="w-full min-h-screen bg-zinc-900 text-white p-10">
        <div class="w-full flex justify-end"> 
            <a class="bg-red-500 rounded-md px-3 py-2" href="/logout">Log Out</a>
        </div>
        <h3 class="text-3xl mb-5">Hello, <%= user.name %></h3>
        <h5 class="">You can create a new post</h5>
        <form action="/post" method="post">
            <textarea placeholder="What's on your mind?" class="block resize-none bg-transparent outline-none bg-zinc-800 bg-transparent p-3 w-1/3 rounded-md mb-2 mt-3" name="content"></textarea>
            <input class="bg-blue-500 p-3 rounded-md block " type="submit" value="Create new post">
        </form>
        <div class="posts mt-20">
            <h3 class="text-zinc-400">Your posts</h3>
            <div class="postcontainer mt-5">
              <% user.posts.reverse().forEach(function(post){ %>
                 <div class="post w-1/3 border-[1px] p-4 mb-4 rounded-md bg-zinc-800 outline-none">
                    
                        <h3 class="text-blue-500 mb-2">@<%= user.name %></h3>
                        <p class="tracking-tight"><%= post.content %></p>
                        <small class="inline-block mt-4"><%= post.likes.length %> <%= post.likes.length===1 ? "Like" : "Likes" %></small>
                        <div class="btns flex mt-5 flex gap-20 mt-2">
                            <a class="text-blue-500 " href="/like/<%= post._id %>">
                              <%=  post.likes.indexOf(user._id)===-1 ? "Like" : "Unlike" %>   
                            </a> 
                            <a class="text-zinc-600" href="/edit/<%= post._id %>">Edit</a>
                        </div>
                  </div> 
              <% }) %>
            </div>
        </div>
    </div>
</body>
</html>